<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleCustomer"
    android:padding="30dp"
    android:rowCount="11"
    android:columnCount="2"
    android:background="#FFFFE0"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Title:-"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singleTitle1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Description:-"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singleDescription1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Printing Work:-"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singlePrinting1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Printing Work time:-"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singlePrintingtime1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="Frame Making:-"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/singleFrame1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:text="Frame Making time:-"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:textSize="15dp"
        android:textColor="#000000"
        android:id="@+id/singleFrametime1"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:text="Pasting Work:-"
        android:textSize="18dp"

        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singlePasting1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:text="Pasting Work time:-"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singlePastingtime1"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:text="Painting Work:-"
        android:textSize="18dp"

        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singlePainting1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="0"
        android:text="Painting Work time:-"
        android:textSize="18dp"

        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="1"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:id="@+id/singlePaintingtime1"
        />
</GridLayout>